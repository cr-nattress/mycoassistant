# =============================================================================
# MycoAssistant Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
# Base URL for the main application
APP_BASE_URL=https://app.mycoassistant.com

# Landing page URL
LANDING_BASE_URL=https://mycoassistant.com

# API service URL
API_BASE_URL=https://api.mycoassistant.com

# Email service URL  
EMAIL_BASE_URL=https://email.mycoassistant.com

# Media service URL
MEDIA_BASE_URL=https://media.mycoassistant.com

# -----------------------------------------------------------------------------
# Database & Authentication
# -----------------------------------------------------------------------------
# Supabase configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# NextAuth configuration
NEXTAUTH_URL=https://mycoassistant.com
NEXTAUTH_SECRET=your-super-secret-nextauth-key-min-32-chars

# JWT Secret for session management
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------
# Email service (SendGrid, Mailgun, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
FROM_EMAIL=noreply@mycoassistant.com

# Azure Blob Storage for file uploads
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_STORAGE_CONTAINER_PROMPTS=prompts-raw
AZURE_STORAGE_CONTAINER_RESPONSES=responses-raw
AZURE_STORAGE_CONTAINER_ANALYSES=analyses-valid
AZURE_STORAGE_CONTAINER_AUDIT=audit

# OpenAI API for AI functionality
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-org-id

# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------
# Environment
NODE_ENV=development

# Port configurations for local development
PORT_LANDING=3000
PORT_ORGANIZER=3001
PORT_API=8888
PORT_EMAIL=8889
PORT_MEDIA=8890

# Database URL for local development
DATABASE_URL=postgresql://username:password@localhost:5432/mycoassistant_dev

# Test database
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/mycoassistant_test

# -----------------------------------------------------------------------------
# Prisma (Accelerate)
# -----------------------------------------------------------------------------
# To use Prisma Accelerate, set DATABASE_URL to your prisma+postgres URL.
# IMPORTANT: Do NOT commit real API keys. Put the real value in your local .env
# or in CI/CD secrets. Keep only placeholders in version control.
# Example format:
# DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_ACCELERATE_API_KEY"

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable beta features
ENABLE_BETA_FEATURES=false

# Enable detailed logging
ENABLE_DEBUG_LOGGING=false

# Enable file upload functionality
ENABLE_FILE_UPLOADS=true

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://mycoassistant.com,https://app.mycoassistant.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
SESSION_SECRET=your-session-secret-min-32-chars
SESSION_TIMEOUT=86400000

# -----------------------------------------------------------------------------
# Third-party Integrations
# -----------------------------------------------------------------------------
# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Social login
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# -----------------------------------------------------------------------------
# Deployment
# -----------------------------------------------------------------------------
# Netlify
NETLIFY_AUTH_TOKEN=your-netlify-auth-token
NETLIFY_SITE_ID_LANDING=your-landing-site-id
NETLIFY_SITE_ID_ORGANIZER=your-organizer-site-id
NETLIFY_SITE_ID_API=your-api-site-id
NETLIFY_SITE_ID_EMAIL=your-email-site-id
NETLIFY_SITE_ID_MEDIA=your-media-site-id

# Build configuration
BUILD_HOOK_LANDING=your-landing-build-hook
BUILD_HOOK_ORGANIZER=your-organizer-build-hook